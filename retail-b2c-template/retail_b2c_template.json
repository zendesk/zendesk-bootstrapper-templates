      "add_triggers": [
        {
          "title": "VIP :: Escalate VIP Tickets",
          "all": [
            {
              "field": "update_type",
              "operator": "is",
              "value": "Create"
            },
            {
              "field": "current_tags",
              "operator": "includes",
              "value": "vip"
