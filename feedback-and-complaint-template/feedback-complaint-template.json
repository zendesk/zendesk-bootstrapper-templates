              "columns": [
                "sla_next_breach_at",
                "subject",
                "requester",
                "created",
                "assignee",
                "{{dispute_reason}}"
              ]
            },
            "all": [
              {
                "field": "status",
                "operator": "less_than",
                "value": "solved"
              }
            ],
            "any": [
              {
                "field": "recipient",
                "operator": "is",
                "value": "ombudsman@{{subdomain}}.zendesk.com"
              },
              {
                "field": "ticket_form_id",
                "operator": "is",
                "value": "{{ticket_form_dispute}}"
              }
            ]
          }
        ]
