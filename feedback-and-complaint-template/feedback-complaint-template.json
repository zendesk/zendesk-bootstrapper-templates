        "options": {
          "reorder_newly_added_to_first": true
        },
        "views": [
          {
            "title": "All Feedback - Open compliments & complaints",
            "active": true,
            "position": 1,
            "output": {
              "group_by": "{{feedback_type}}",
              "group_order": "asc",
              "sort_by": "sla_next_breach_at",
              "sort_order": "asc",
              "group": [
                {
                  "id": "{{feedback_type}}",
                  "title": "Feedback type",
                  "type": "tagger",
                  "url": "https://{{subdomain}}.zendesk.com/api/v2/ticket_fields/{{feedback_type}}.json",
                  "order": "asc"
                }
              ],
              "columns": [
                "via",
                "subject",
                "requester",
                "created",
                "sla_next_breach_at",
                "assignee"
              ]
            },
            "all": [
              {
                "field": "status",
                "operator": "less_than",
                "value": "solved"
              }
            ],
            "any": [
              {
                "field": "recipient",
                "operator": "is",
                "value": "complaints@{{subdomain}}.zendesk.com"
              },
              {
                "field": "ticket_form_id",
                "operator": "is",
                "value": "{{ticket_form_feedback}}"
              }
            ]
          },
          {
            "title": "Complaints - Open",
            "active": true,
            "position": 2,
            "output": {
              "group_by": "priority",
              "group_order": "desc",
              "sort_by": "sla_next_breach_at",
              "sort_order": "asc",
              "group": [
                {
                  "id": "priority",
                  "title": "Priority",
                  "order": "desc"
                }
              ],
              "columns": [
                "sla_next_breach_at",
                "requester",
                "subject",
                "requester_updated_at",
                "{{complaint_reason}}",
                "created",
                "assignee"
              ]
            },
            "all": [
              {
                "field": "status",
                "operator": "less_than",
                "value": "solved"
              }
            ],
            "any": [
              {
                "field": "recipient",
                "operator": "is",
                "value": "complaints@{{subdomain}}.zendesk.com"
              },
              {
                "field": "custom_fields_{{feedback_type}}",
                "operator": "is",
                "value": "complaint"
              }
            ]
          },
          {
            "title": "Ombudsman Disputes - Open",
            "active": true,
            "position": 3,
            "output": {
              "group_by": null,
              "group_order": "desc",
              "sort_by": "created",
              "sort_order": "desc",
