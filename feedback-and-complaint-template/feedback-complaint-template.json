      "add_triggers": [
        {
          "title": "Complaints - Notify requester of received Complaint",
          "active": true,
          "position": 1,
          "all": [
            {
              "field": "update_type",
              "operator": "is",
              "value": "Create"
            },
            {
              "field": "status",
              "operator": "less_than",
              "value": "solved"
            },
            {
              "field": "ticket_is_public",
              "operator": "is",
              "value": "public"
            },
            {
              "field": "comment_is_public",
              "operator": "is",
              "value": "true"
            }
          ],
          "any": [
            {
              "field": "recipient",
              "operator": "is",
              "value": "complaints@{{subdomain}}.zendesk.com"
            },
            {
              "field": "custom_fields_{{feedback_type}}",
              "operator": "is",
              "value": "complaint"
            }
          ],
          "actions": [
            {
              "field": "priority",
              "value": "normal"
            },
            {
              "field": "notification_user",
              "value": [
                "requester_id",
                "Your complaint has been received by our team",
                "Dear {{ticket.requester.name}}, Thank you for your email. We have received your complaint, your reference number is: (#{{ticket.id}}) {{ticket.link}}. Your matter is very important to us and we will be contacting you within the next 5 business days. <br /><br />To add additional comments, please simply reply to this email. Your customer service team"
              ]
            },
            {
              "field": "group_id",
              "value": "{{group_complaints_team}}"
            },
            {
              "field": "ticket_form_id",
              "value": "{ticket_form_feedback}"
            },
            {
              "field": "type",
              "value": "question"
            }
          ]
        },
        {
          "title": "Complaints - No Contact",
          "active": true,
          "position": 2,
