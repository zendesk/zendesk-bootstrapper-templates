              "field": "update_type",
              "operator": "is",
              "value": "Create"
            },
            {
              "field": "status",
              "operator": "less_than",
              "value": "solved"
            },
            {
              "field": "ticket_is_public",
              "operator": "is",
              "value": "public"
            },
            {
              "field": "comment_is_public",
              "operator": "is",
              "value": "true"
            },
            {
              "field": "custom_fields_{{feedback_type}}",
              "operator": "is",
              "value": "complaint"
            },
            {
              "field": "custom_fields_{{complaint_contact_options}}",
              "operator": "is",
              "value": "don_t_contact_me__i_just_want_to_inform_you."
            }
          ],
          "actions": [
            {
              "field": "type",
              "value": "question"
            },
            {
              "field": "current_tags",
              "value": "complaints_solved_nocontact"
            },
            {
              "field": "custom_fields_{{complaint_reason_code}}",
              "value": "crc-1"
