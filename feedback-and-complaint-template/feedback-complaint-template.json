          ]
        },
        {
          "title": "Complaints - Pending notification 24 hours",
          "active": true,
          "all": [
            {
              "field": "PENDING",
              "operator": "is",
              "value": "24"
            },
            {
              "field": "ticket_is_public",
              "operator": "is",
              "value": "public"
            }
          ],
          "any": [
            {
              "field": "recipient",
              "operator": "is",
              "value": "complaints@{{subdomain}}.zendesk.com"
            },
            {
              "field": "custom_fields_{{feedback_type}}",
              "operator": "is",
              "value": "complaint"
            }
          ],
          "actions": [
            {
              "field": "notification_user",
              "value": [
                "requester_and_ccs",
                "We are waiting to hear back from you: {{ticket.title}}",
                "Hi {{ticket.requester.name}}, This is an email to remind you that we are waiting to hear back from you concerning your request (#{{ticket.id}}). {{ticket.comments_formatted}}"
              ]
            },
            {
              "field": "current_tags",
              "value": "Complaint_Pending_notified"
            }
          ]
        }
      ]
