  "business_rules": {
    "add_slas": [
      {
        "title": "Urgent Incidents SLA",
        "description": "For urgent incidents, we will respond to tickets in 10 minutes",
        "position": 1,
        "filter": {
          "all": [
            {
              "field": "type",
              "operator": "is",
              "value": "incident"
            }
          ],
          "any": []
        },
        "policy_metrics": [
          {
            "priority": "normal",
            "metric": "first_reply_time",
            "target": 30,
            "business_hours": false
          },
          {
            "priority": "urgent",
            "metric": "first_reply_time",
            "target": 10,
            "business_hours": false
          },
          {
            "priority": "low",
            "metric": "requester_wait_time",
            "target": 180,
            "business_hours": false
          },
          {
            "priority": "normal",
            "metric": "requester_wait_time",
            "target": 160,
            "business_hours": false
          },
          {
            "priority": "high",
            "metric": "requester_wait_time",
            "target": 140,
            "business_hours": false
          },
          {
            "priority": "urgent",
            "metric": "requester_wait_time",
            "target": 120,
            "business_hours": false
          }
        ]
      },
      {
        "title": "Gold Subscriber SLA",
        "description": "For Gold Subscribers, we will respond to tickets in 10 minutes",
        "position": 2,
        "filter": {
          "all": [
            {
              "field": "current_tags",
              "operator": "includes",
              "value": "subscription_plan_gold"
            }
          ],
          "any": []
        },
        "policy_metrics": [
          {
            "priority": "normal",
            "metric": "first_reply_time",
            "target": 30,
            "business_hours": false
          },
          {
            "priority": "urgent",
            "metric": "first_reply_time",
            "target": 10,
            "business_hours": false
          },
          {
            "priority": "low",
            "metric": "requester_wait_time",
            "target": 180,
            "business_hours": false
          },
          {
            "priority": "normal",
            "metric": "requester_wait_time",
            "target": 160,
            "business_hours": false
          },
          {
            "priority": "high",
            "metric": "requester_wait_time",
            "target": 140,
            "business_hours": false
          },
          {
            "priority": "urgent",
            "metric": "requester_wait_time",
            "target": 120,
            "business_hours": false
          }
        ]
      }
    ],
    "add_triggers": [
      {
        "title": "Gold :: Escalate Gold Tickets",
        "all": [
          {
            "field": "update_type",
            "operator": "is",
            "value": "Create"
          },
          {
            "field": "current_tags",
            "operator": "includes",
            "value": "subscription_plan_gold"
          }
        ],
        "actions": [
          {
            "field": "priority",
            "value": "high"
          }
        ]
      },
      {
        "title": "Auto set Priority to Normal (for SLA management)",
        "all": [
          {
            "field": "status",
            "operator": "is",
            "value": "new"
          },
          {
            "field": "priority",
            "operator": "is",
            "value": ""
          }
        ],
        "actions": [
          {
            "field": "priority",
            "value": "normal"
          }
        ]
      },
      {
        "title": "CSAT :: Send CSAT Survey",
        "all": [
          {
            "field": "status",
            "operator": "is",
            "value": "solved"
          },
          {
            "field": "current_tags",
            "operator": "includes",
            "value": "csat"
          },
          {
            "field": "current_tags",
            "operator": "not_includes",
            "value": "smooch supportkit"
          },
          {
            "field": "comment_is_public",
            "operator": "is",
            "value": "true"
          }
        ],
        "actions": [
          {
            "field": "notification_user",
            "value": [
              "requester_and_ccs",
              "Request #{{ticket.id}}: How would you rate the support you received?",
              "Hello {{ticket.requester.name}},\n\nWe'd love to hear what you think of our customer service. Please take a moment to answer one simple question by clicking either link below:\n\n{{satisfaction.rating_section}}\n\nHere's a reminder of what your ticket was about:\n\n{{ticket.comments_formatted}}"
            ]
          }
        ]
      }
    ]
  },
