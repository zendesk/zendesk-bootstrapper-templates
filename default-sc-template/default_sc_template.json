          "active": true,
          "position": 2,
          "output": {
            "group_by": "satisfaction_score",
            "group_order": "desc",
            "sort_by": "updated",
            "sort_order": "asc",
            "columns": [
              "via",
              "subject",
              "requester",
              "created",
              "assignee",
              "satisfaction_score"
            ]
          },
          "all": [
            {
              "field": "status",
              "operator": "greater_than",
              "value": "new"
            },
            {
              "field": "SOLVED",
              "operator": "less_than",
              "value": "169"
