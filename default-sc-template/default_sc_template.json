  "ticket_views": {
    "add_ticket_views": {
      "options": {
        "reorder_newly_added_to_first": true
      },
      "views": [
        {
          "title": "üìß Email Tickets",
          "active": true,
          "position": 1,
          "output": {
            "group_by": "status",
            "group_order": "desc",
            "sort_by": "nice_id",
            "sort_order": "desc",
            "columns": [
              "satisfaction_score",
              "subject",
              "requester",
              "created",
              "assignee"
            ]
          },
          "all": [
            {
              "field": "status",
              "operator": "less_than",
              "value": "solved"
            },
            {
              "field": "via_id",
              "operator": "is",
              "value": "4"
            }
          ],
          "any": []
        },
        {
          "title": "üíª Website Requests",
          "active": true,
          "position": 3,
          "output": {
